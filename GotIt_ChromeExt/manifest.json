{
  "name": "Got it!",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Test app for Got it!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts":["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at":"document_end"
    }
  ],
  "permissions": ["activeTab"]
}